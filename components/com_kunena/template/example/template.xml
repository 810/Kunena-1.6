<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install>
<kinstall type="kunena-template" version="1.6">
	<name>Example Template</name>
	<version>1.6.0</version>
	<creationDate>2010-07-04</creationDate>
	<author>Kunena Team</author>
	<authorEmail>team@kunena.com</authorEmail>
	<authorUrl>http://www.kunena.com</authorUrl>
	<copyright>Kunena Team</copyright>
	<license>GNU/GPL</license>
	<description>
	Example template can be used as a base when you start designing your own template. To get started: copy everything in /components/com_kunena/template/example into your own directory and edit template.xml.
	This template uses images from Blue Eagle (default) template.
	</description>
	<thumbnail>template_thumbnail.png</thumbnail>
	<params>
		<param name="avatarPosition" type="list" default="left" label="Profile Position" description="PROFILE POSITION DESCRIPTION">
			<option value="left">Left</option>
			<option value="top">Top</option>
			<option value="right">Right</option>
			<option value="bottom">Bottom</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="buttonIconset" type="list" default="default" label="Button Set" description="BUTTON SET">
			<option value="default">Default</option>
			<option value="dtp2nl">dtp2.nl</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="profileIconset" type="list" default="default" label="Profile Icon Set" description="PROFILE ICON SET">
			<option value="default">Default</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="editorIconset" type="list" default="default" label="Editor Icon Set" description="EDITOR ICON SET">
			<option value="default">Default</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="forumHeadercolor" type="text" default="#5388B4" label="Forum Header Background" description="Default #5388B4" />
		<param name="announcementHeadercolor" type="text" default="#990000" label="Announcement Header Background" description="Default #990000" />
		<param name="announcementBoxbgcolor" type="text" default="#FFFFAA" label="Announcement Box Background" description="Default #FFFFAA" />
		<param name="frontstatsHeadercolor" type="text" default="#000000" label="Frontstats Header Background" description="Default #000000" />
		<param name="whoisonlineHeadercolor" type="text" default="#3B5323" label="WhoIsOnline Header Background" description="Default #3B5323" />

		<!-- Required avatar sizes -->
		<param name="avatarSizeXThumb" type="hidden" default="36" />
		<param name="avatarSizeYThumb" type="hidden" default="36" />
		<param name="avatarSizeXWelcome" type="hidden" default="72" />
		<param name="avatarSizeYWelcome" type="hidden" default="72" />
		<param name="avatarSizeXList" type="hidden" default="36" />
		<param name="avatarSizeYList" type="hidden" default="36" />
		<param name="avatarSizeXPost" type="hidden" default="144" />
		<param name="avatarSizeYPost" type="hidden" default="144" />
		<param name="avatarSizeXProfile" type="hidden" default="200" />
		<param name="avatarSizeYProfile" type="hidden" default="200" />
	</params>
</kinstall>
