<?xml version="1.0" encoding="UTF-8"?>
<metadata>
	<layout title="Show Categories List">
		<message>
			<![CDATA[Show categories list]]>
		</message>
	</layout>
	<state>
		<name>Kunena Forum: Show Categories List</name>
		<description>Show categories list</description>
		<url>
			<param name="category" type="text" default="0" label="Root Category" />
			<param name="type" type="list" default="nested" label="Type">
				<option value="flat">Flat</option>
				<option value="nested">Nested</option>
			</param>
			<param name="order" type="list" default="asc" label="Message Order">
				<option value="asc">Ascending</option>
				<option value="desc">Descending</option>			
			</param>
		</url>
		<params>
			<param type="spacer" />
			<param name="filter_categories_which" type="radio" default="0" label="Selected Categories">
				<option value="0">Exclude list</option>
				<option value="1">Include list</option>
			</param>			
			<param name="filter_categories" type="text" default="" label="Comma Separated List of Category IDs" />
			<param name="filter_categories_override" type="radio" default="0" label="Allow User Override">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</param>			
		</params>
	</state>
</metadata>