<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5.0" method="upgrade">
	<name>Kunena</name>
	<creationDate>@kunenaversiondate@</creationDate>
	<author>Kunena Team</author>
	<authorEmail>kunena@kunena.com</authorEmail>
	<authorUrl>http://www.kunena.com</authorUrl>
	<copyright>(c) 2008-2009 Kunena Team, All rights reserved</copyright>
	<license>GNU/GPL</license>
	<version>1.6.0-DEV</version>
	<versionname>Parli</versionname>
	<build>@kunenaversionbuild@</build>
	<description>Kunena Forum</description>
	
	<installfile>install/kunena.install.php</installfile>
	<uninstallfile>install/kunena.uninstall.php</uninstallfile>
	
	<files>
		<filename>CHANGELOG.php</filename>
		<filename>COPYRIGHT.php</filename>
		<filename>README.txt</filename>
	</files>
	<files folder="site">
		<filename>index.html</filename>
		<filename>api.php</filename>
		<filename>controller.php</filename>
		<filename>jomsocial_rule.xml</filename>
		<filename>kunena.php</filename>
		<filename>router.php</filename>
		<folder>helpers</folder>
		<folder>libraries</folder>
		<folder>media</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	<files folder="legacy.site">
		<filename>class.kunena.php</filename>
		<filename>legacy.kunena.php</filename>
		<folder>lib</folder>
		<folder>template</folder>
		<folder>kunena.files.distribution</folder>	
	</files>
	
	<languages folder="languages/site">
		<language tag="en-GB">en-GB.com_kunena.ini</language>
	</languages>
	
	<administration>
		<menu>Kunena Forum</menu>
		<submenu>
			<menu view="config">Configuration</menu>
			<menu task="showAdministration">Forum Administration</menu>
			<menu task="showprofiles">User Administration</menu>
			<menu task="showsmilies">Edit Smilies</menu>
			<menu task="ranks">Edit Ranks</menu>
		</submenu>

		<files>
			<filename>kunena.xml</filename>
			<folder>install</folder>
		</files>
		<files folder="admin">
			<filename>index.html</filename>			
			<filename>api.php</filename>
			<filename>admin.kunena.php</filename>
			<filename>controller.php</filename>
			<folder>controllers</folder>
			<folder>media</folder>
			<folder>models</folder>
			<folder>views</folder>
		</files>
		<files folder="legacy.admin">
			<filename>kunena.cpanel.php</filename>
			<filename>legacy.admin.kunena.html.php</filename>
			<filename>legacy.admin.kunena.php</filename>
			<filename>toolbar.kunena.html.php</filename>
			<filename>toolbar.kunena.php</filename>    
			<folder>images</folder>
			<folder>language</folder>
			<folder>lib</folder>
			<folder>plugin</folder>
		</files>

		<languages folder="languages/admin">
			<language tag="en-GB">en-GB.com_kunena.ini</language>
		</languages>
	</administration>

	<params />
</install>
