<!ELEMENT schema (table*)>

<!ELEMENT table (field*, key*)>
<!ATTLIST table 
name ID #REQUIRED
action (none|create|alter|drop) #IMPLIED>

<!ELEMENT field EMPTY>
<!ATTLIST field 
primary_key CDATA #IMPLIED
name CDATA #REQUIRED
type CDATA #REQUIRED
null (0|1) #REQUIRED
default CDATA ""
extra CDATA #IMPLIED
action (none|create|alter|drop) #IMPLIED>

<!ELEMENT key EMPTY>
<!ATTLIST key 
name CDATA #REQUIRED
unique (0|1) #IMPLIED
columns CDATA #IMPLIED
action (none|create|alter|drop) #IMPLIED>
