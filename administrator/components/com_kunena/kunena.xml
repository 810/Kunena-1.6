<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install>
<install type="component" version="1.5.0" method="upgrade">
	<name>Kunena</name>
	<version>1.6.0-ALPHA2</version>
	<versionname>Gespraech</versionname>
	<creationDate>@kunenaversiondate@</creationDate>
	<build>@kunenaversionbuild@</build>
	<author>www.Kunena.com</author>
	<authorEmail>Kunena@Kunena.com</authorEmail>
	<authorUrl>http://www.Kunena.com</authorUrl>
	<copyright>www.Kunena.com</copyright>
	<license>GNU/GPL</license>
	<description>Kunena Forum</description>
	<installfile>install.kunena.php</installfile>
	<uninstallfile>uninstall.kunena.php</uninstallfile>
	<scriptfile>install.script.php</scriptfile>
	<files>
		<filename>kunena.php</filename>
		<filename>router.php</filename>
		<filename>CHANGELOG.php</filename>
		<filename>COPYRIGHT.php</filename>
	</files>
	<administration>
		<menu view="cpanel" img="components/com_kunena/media/icons/kunena-favicon.png">Kunena Forum</menu>
		<submenu>
			<menu link="option=com_kunena&amp;task=showconfig" img="components/com_kunena/media/icons/config-favicon.png">Configuration</menu>
			<menu link="option=com_kunena&amp;task=showAdministration" img="components/com_kunena/media/icons/forums-favicon.png">Category Manager</menu>
			<menu link="option=com_kunena&amp;task=showprofiles" img="components/com_kunena/media/icons/users-favicon.png">User Manager</menu>
			<menu link="option=com_kunena&amp;task=showsmilies" img="components/com_kunena/media/icons/smilies-favicon.png">Emoticon Manager</menu>
			<menu link="option=com_kunena&amp;task=ranks" img="components/com_kunena/media/icons/ranks-favicon.png">Rank Manager</menu>
		</submenu>
		<files>
			<filename>admin.kunena.php</filename>
			<folder>install</folder>
			<folder>archive</folder>
		</files>
		<menu img="components/com_kunena/images/kunenafavicon.png">Kunena Forum</menu>
		<languages folder="languages">
			<language tag="en-GB">en-GB.com_kunena.install.ini</language>
		</languages>
	</administration>
	<params />
</install>
